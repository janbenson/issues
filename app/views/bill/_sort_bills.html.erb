<div id="sort_nav">

<div id="heading">

<h2>All Legislation in Congress</h2>

	<ul id="in" class="clearfix">
	   <li id="all" class="<%=  @types == "all" ? "active" : "" %>">
			<%= link_to "<span>All Congress</span>".html_safe, :types => 'all' %>
		</li>
		<li id="senate" class="<%= @types == 'senate' ? "active" : "" %>">
			<%= link_to "<span>Senate Bills</span>".html_safe, :types => 'senate' %>
		</li>
		<li id="house" class="<%= @types == 'house' ? "active" : "" %>">
			<%= link_to "<span>House Bills</span>".html_safe, :types => 'house' %>
		</li>
	</ul>


</div>
 <ul class="sorts">
		<li id="all" class="inline <%= @sort == 'all' ? "active" : "" %>">
			<%= link_to "<span>All Bills</span>".html_safe, { :action => 'all' }, :types => @types, :class => 'button silver small fullyrounded push-right' %>
	 	</li>
 		<li id="popular" class="<%= @sort == 'popular' ? "active" : "" %>">
			<%= link_to "<span>Most-Viewed</span>".html_safe, {:action => 'popular'}, :types => @types, :class => 'button silver small fullyrounded push-right' %>
		</li>
		<li id="news" class="<%= @sort == 'news' ? "active" : "" %>">
			<%= link_to "<span>Most in the News</span>".html_safe, bill_most_commentary_path(:type => 'news', :types => @types), :class => 'button silver small fullyrounded push-right' %>
		</li>
		<li id="blog" class="<%= @sort == 'blog' ? "active" : "" %>">
			<%= link_to "<span>Most on Blogs</span>".html_safe, bill_most_commentary_path(:type => 'blogs', :types => @types), :class => 'button silver small fullyrounded push-right clear' %>
		</li>
		<li id="major" class="<%= @sort == 'major' ? "active" : "" %>">
			<%= link_to "<span>Major Bills by Issue Area</span>".html_safe, {:action => 'major'}, :types => @types, :class => 'button silver small fullyrounded push-right' %>
		</li>

		<li id="hot" class="<%= @sort == 'hot' ? "active" : "" %>">
			<%= link_to "<span>Hot Bills on OC</span>".html_safe, {:action => 'hot'}, :types => @types, :class => 'button silver small fullyrounded push-right' %>
		</li>
    
  
		<li id="pending" class="<%= @sort == 'pending' ? "active" : "" %>">
			<%= link_to "<span>Recent Action</span>".html_safe, {:action => 'pending'}, :types => @types, :class => 'button silver small fullyrounded push-right' %>
		</li>

		<li id="gpo" class="<%= @sort == 'gpo' ? "active" : "" %>">

			<%= link_to "<span>Rushed Bills</span>".html_safe, {:action => 'readthebill'}, :types => @types, :class => 'button silver small fullyrounded push-right' %>
		</li>

	</ul>
		
	<% if @atom %>
	  <a href="<%= @atom['link'] %>" class="rss floatright"><%= image_tag 'rss.png' %></a>
	<% end %>

	<%= render :partial => 'shared/timeframe_select' if @days %>

</div>  

