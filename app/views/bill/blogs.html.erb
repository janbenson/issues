<div class="main"> 
<%= render :partial => 'shared/sort_commentary', 
                                :locals => { :object_type => 'bill', :object_id => @bill.ident } %>
<%= render :partial => 'nbtabs' %>                                
<% cache("#{@bill.fragment_cache_key}_#{params[:action]}_#{@sort}_page_#{@page}") do %>
  <!-- cached: <%= "#{@bill.fragment_cache_key}_#{params[:action]}_#{@sort}_page_#{@page}" %> // <%= Time.now %> -->
  <div id="blogs_list">
    <p><%= will_paginate @blogs, :params => { :sort => @sort }  %></p>
    <%= render :partial => 'shared/blogs', :object => @blogs,
      :locals => { :limit => @blogs.size, :all_size => @bill.blog_article_count, :default_title => @bill.typenumber,
                   :more_url => { :controller => 'bill', :action => 'blogs', :id => @bill.ident } } %>
    <p><%= will_paginate @blogs, :params => { :sort => @sort }  %></p>
  </div>
<% end %>
</div>