<%= toggler('change_pass', 'Change Password', 'Close', 'button silver medium', 'button silver medium').html_safe %>
<div id="change_pass" style="display:none; margin-top: 10px;">
	<% form_for :user, nil, :url => {:controller => 'account', :action => 'change_pw', :id => current_user.id} do |f| %>
	<p><label>New Password:</label>
		<%= f.password_field :password %>
	</p>
	<p><label>Confirm:</label>
		<%= f.password_field :password_confirmation %>
	</p>
	<p><%= submit_tag "Change Password" %></p>
	<% end %>

</div>
