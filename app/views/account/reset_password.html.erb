<div class="padding">
  <h2>Reset Password</h2>
  <% form_for :user do |f| %>
    Password:<br />
    <%= f.password_field :password, :value => '' %>
    
    <div class="clear" />

    Confirm Password:<br />
    <%= f.password_field :password_confirmation, :value => '' %><br />

    <div class="clear" />

    <%= submit_tag "Reset Your Password" %>
  <% end %>
</div>