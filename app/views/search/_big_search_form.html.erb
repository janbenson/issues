 <% show_form ||= false %>
 	
 	<div class="search_info">
 	
 	<h4>Advanced Search Options</h4>
 	
 	<p>Use the options to the right to narrow down your search results.</p>
 	
 	</div>

 	<% if show_form %>
   	<form action="/search/result" id="search-form-advanced">
     	<p>
        <input name="q" id="search-field-advanced" type="text" value="" class="floatleft" />
        <label for="search-field-advanced">
          <a href="#" class="med_button" onclick="$('search-form-advanced').submit(); return false;">
            <span>Search</span>
          </a>
        </label>
     	</p>
  <% end %>
 	
    <div id="sessions">
      <p>Sessions:</p>
      <% Settings.available_congresses.each do |c| %>
        <%= check_box_tag "search_congress[#{c}]", "#{c}", c == Settings.default_congress ? true : false %> <%= c.ordinalize %> Congress<br />
      <% end %>
    </div>
		
  	<div id="search_in">
  	  <p>Search in:</p>
	  
  	  <input checked="checked" id="search_bills" name="search_bills" type="checkbox" value="1" /> <label for="search_bills">Bills</label><br />
  	  <input checked="checked" id="search_people" name="search_people" type="checkbox" value="1" /> <label for="search_senators">Congresspeople</label><br />
  	  <input checked="checked" id="search_committees" name="search_committees" type="checkbox" value="1" /><label for="search_committees"> Committees</label><br />
  	  <input checked="checked" id="search_issues" name="search_issues" type="checkbox" value="1" /> <label for="search_issues">Issues</label><br />
  	  <input checked="checked" id="search_comments" name="search_comments" type="checkbox" value="1" /> <label for="search_reps">User Comments</label><br />
  	  <input id="search_commentary" name="search_gossip_blog" type="checkbox" value="1" /> <label for="search_reps">OpenCongress Blog</label>

  	  <span id="search_indicator" style="display: none"><%= image_tag 'indicator.gif', :class => 'noborder' %></span>
  	</div>
  <% if show_form %>
    </form>
  <% end %>
